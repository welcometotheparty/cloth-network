

<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, :label => "Заголовок"%>
    <%= f.input :desc , :label => "Описание/особенности", :maxlength => 282, input_html: {rows: 6, cols: 10} %>
    <%= f.input :price, :label => "Цена (₽)" %>
    <%= f.input :image1, :label => "Ссылка на первое фото" %>
    <%= f.input :image2, :label => "Ссылка на второе фото" %>
    <%= f.input :image3, :label => "Ссылка на третье фото" %>


  </div>

  <div class="form-actions">
    <%= f.button :submit , class: "btn btn-dark"  %>
  </div>
<% end %>
