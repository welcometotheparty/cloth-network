
<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :desc %>
    <%= f.input :price %>
    <%= f.input :image1 %>
    <%= f.input :image2 %>
    <%= f.input :image3 %>
    <%= f.input :image4 %>
    <%= f.input :size %>
    <%= f.input :condition %>
    <%= f.input :location %>
    <%= f.input :shipment %>
    <%= f.input :tag %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
